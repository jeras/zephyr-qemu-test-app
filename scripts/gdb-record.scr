###############################################################################
# script for recording a trace
###############################################################################

set logging enabled on
set debug remote 1
file build/zephyr/zephyr.elf
target extended-remote localhost:1234
info registers
# perform 8 forward steps
stepi
stepi
stepi
stepi
stepi
stepi
stepi
stepi
info registers
# close QEMU (so it does not continue execution)
kill
# quit GDB
quit
